                                            @foreach (DataColumn column in Model.ModelDef2.Detail.Columns)
                                                {
                                            <td>@row[column]</td>
                                                }
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    }                                
                </div>

                <div class="dashboardCol">
                    <div class="dashboardItemHeader">@Model.ModelDef3.Name</div>
