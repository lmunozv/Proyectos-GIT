@using System.Data
@model Bizagi.Business.Reports.Models.ChartsModel
<!DOCTYPE html>
<html>
<head>
    <link href="@Url.Content("~/Content/dashboard.css")" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="pageBody">
        <div class="dashboard">
            <div class="dashboard3Col">
                <div class="dashboardCol">
                    <div class="dashboardItemHeader">@Model.ModelDef1.Name</div>
                    @if (!Model.ModelDef1.isDetail)
                    {
                        <div class="dashboardItemBody">
                            @Model.ModelDef1.Model
                        </div>
                    }
                    else
                    {
                        <div>
                            <p>
                                @Html.ActionLink("Descargar Archivo", "Download1")
                            </p>
                            <div style="height: 200px; overflow: auto; text-align:center">
                                <table border="1">
                                    <thead>
                                        <tr>
                                            @foreach (DataColumn column in Model.ModelDef1.Detail.Columns)
                                            {
                                            <th>@column.ColumnName</th>
                                            }
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (DataRow row in Model.ModelDef1.Detail.Rows)
                                        {
                                        <tr>
                                            @foreach (DataColumn column in Model.ModelDef1.Detail.Columns)
                                                {
                                            <td>@row[column]</td>
                                                }
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    }
                    <div class="dashboardItemHeader">@Model.ModelDef2.Name</div>
                    @if (!Model.ModelDef2.isDetail)
